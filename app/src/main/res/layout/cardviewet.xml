<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/canselBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_weight=".3"
                android:background="@null"
                android:src="@drawable/ic_baseline_close_24"
                android:textColor="@color/white"
                android:layout_gravity="right"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="18dp">

                <TextView
                    android:id="@+id/viewNavn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="name"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewAirTemp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="air temperature"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewWind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="wind"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/viewTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:text="weather"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/viewVaer"
                        android:layout_width="62dp"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@id/viewTemp"
                        android:foregroundGravity="center_horizontal"
                        android:gravity="center|center_horizontal" />
                </LinearLayout>


            </LinearLayout>

            <ToggleButton
                android:id="@+id/favoritBtn"
                android:layout_weight=".3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/favoritbutton"
                android:layout_gravity="center"
                android:checked="false"
                android:layout_marginBottom="9dp"
                android:layout_alignParentEnd="true"
                android:text="Add to favorite"
                android:textOff=""
                android:textOn=""/>

            <!--            <TextView-->
            <!--                android:id="@+id/viewTemp"-->
            <!--                android:layout_width="351dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:hint="textview2"-->
            <!--                app:layout_constraintBottom_toBottomOf="@id/viewNavn"-->
            <!--                android:padding="5dp"-->
            <!--                android:textAlignment="center" />-->

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>